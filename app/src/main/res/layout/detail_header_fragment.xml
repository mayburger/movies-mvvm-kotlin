<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="mViewModel"
            type="com.nacoda.moviesmvvm.mvvm.detail.header.DetailHeaderViewModel" />

        <variable
            name="mMovie"
            type="com.nacoda.moviesmvvm.data.model.Movie" />

        <variable
            name="backdrop_path"
            type="String" />

        <variable
            name="poster_path"
            type="String" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_300dp"
            android:background="@color/colorImagePlaceholder"
            bind:loadPoster="@{backdrop_path}" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/gradient" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:layout_height="200dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_150dp"
            app:cardCornerRadius="@dimen/dimen_8dp">

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</layout>