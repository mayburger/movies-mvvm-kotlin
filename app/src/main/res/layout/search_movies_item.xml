<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View.OnClickListener" />

        <variable
            name="userActionListener"
            type="com.nacoda.moviesmvvm.mvvm.main.MainItemUserActionListener" />

        <variable
            name="item"
            type="com.nacoda.moviesmvvm.data.model.Movie" />

        <variable
            name="genres"
            type="String" />

        <variable
            name="poster_path"
            type="String" />

        <variable
            name="year"
            type="String" />

        <variable
            name="rating"
            type="String" />

        <variable
            name="votes"
            type="String" />

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8dp"
        android:onClick="@{() -> userActionListener.onMovieClicked(item)}"
        android:orientation="horizontal"
        app:cardCornerRadius="@dimen/dimen_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:cardBackgroundColor="@color/colorImagePlaceholder"
                app:cardCornerRadius="@dimen/dimen_8dp">

                <ImageView
                    android:id="@+id/list_movies_main_poster_card"
                    android:layout_width="130dp"
                    android:layout_height="160dp"
                    bind:loadPoster="@{poster_path}" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="@{item.title}"
                    android:textColor="@color/dove_black"
                    android:textSize="@dimen/text_20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="@{genres}"
                    android:textColor="@color/davys_gray"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="@{year}"
                    android:textColor="@color/davys_gray"
                    android:textSize="@dimen/text_12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:background="@color/lineGrey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_20dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:src="@drawable/popularity" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:layout_marginStart="@dimen/dimen_4dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@{rating}" />

                    <ImageView
                        android:layout_width="@dimen/dimen_20dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:src="@drawable/votes" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:layout_marginStart="@dimen/dimen_4dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@{votes}" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>